---
import Layout from "../layouts/Layout.astro";

const posts = [
  {
    title: "Placeholder",
    slug: "exBlog",
    date: "2026-01-20",
    excerpt: "This is just an placehoder"
  }
];
---

<Layout title="Home Page">
  <h1>Base</h1>
  <h2>1</h2>
  <h3>2</h3>
  <h4>3</h4>
  <div class="content">
    <h1 id="Howdy">Howdy!</h1>
    <section class="intro">
      <p id="small-about">

        My name is Henry Odza. I am a senior computer science student at Case
        Western Reserve University with a minor in history, and this is my
        personal site! Learn more about me in <a href="/about">the about
        page</a> or check out my recent blog posts below.

      </p>
    </section>

    <section class="blog-posts">
      <h2>Recent Blog Posts</h2>
      <div class="posts-list">
        {posts.map((post) => (
          <article class="post-card">
            <h3><a href={`/posts/${post.slug}`}>{post.title}</a></h3>
            <p class="post-date">{new Date(post.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</p>
            <p class="post-excerpt">{post.excerpt}</p>
            <a href={`/posts/${post.slug}`} class="read-more">Read More â†’</a>
          </article>
        ))}
      </div>
    </section>
  </div>
</Layout>